<!--index.ejs-->
    <div class="container-fluid">
	<div class="row">
	<div class="col-md-12">
		<% if(req.session.usrname == null){ %>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="http://localhost:1337/prop/index">Home</a>
                </li>
                <li>
                    <a href="http://localhost:1337/prop/search">Search</a>
                </li>
                <li>
                    <a href="http://localhost:1337/usr/login">Login</a>
                </li>
            </ul>
        <%} else {%>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="http://localhost:1337/prop/index">Home</a>
                </li>
                <li>
                    <a href="http://localhost:1337/prop/search">Search</a>
                </li>
                <li>
                    <a href="http://localhost:1337/prop/create">Create</a>
                </li>
                <li>
                    <a href="http://localhost:1337/prop/admin">Admin</a>
                </li>
                <li>
                    <a href="http://localhost:1337/usr/logout">Logout</a>
                </li>
                <li class="disabled">
                    Hi, <%=req.session.usrname%>
                </li>
            </ul>
        <% } %>
			<div class="jumbotron">
				<h2>
					Property Rental System
				</h2>
				<p>
					Property Rental Management System is a web-based system to facilitate flatshare and finding roommates.
				</p>
			</div>
		</div>
			<div class="row">
				<div class="col-md-6">
					<% propsone.forEach( function(model) { %>
					<a href="http://localhost:1337/prop/view/<%=model.id%>"><%=model.name%></a>
					<div class="row">
						<div class="col-md-6">
							<img alt="Property Image Preview" src="<%=model.imageurl%>" class="img-rounded" height="125px" width="200px">
						</div>
						<div class="col-md-6">
							<div class="panel panel-default">
								<div class="panel-heading">
									<h3 class="panel-title">
										Estate: <%=model.estate%>
									</h3>
								</div>
								<div class="panel-body">
									Gross Area: <%=model.garea%>
								</div>
								<div class="panel-footer">
									Rent: <%=model.rent%>
								</div>
							</div>
						</div>
					</div>
					<% }); %>
				</div>
				<div class="col-md-6">
					<% propstwo.forEach( function(model) { %>
					
					<a href="http://localhost:1337/prop/view/<%=model.id%>"><%=model.name%></a>
					<div class="row">
						<div class="col-md-6">
							<img alt="Property Image Preview" src="<%=model.imageurl%>" class="img-rounded" height="125px" width="200px">
						</div>
						<div class="col-md-6">
							<div class="panel panel-default">
								<div class="panel-heading">
									<h3 class="panel-title">
										Estate: <%=model.estate%>
									</h3>
								</div>
								<div class="panel-body">
									Gross Area: <%=model.garea%>
								</div>
								<div class="panel-footer">
									Rent: <%=model.rent%>
								</div>
							</div>
						</div>
					</div>
					<% }); %>
				</div>
			</div>
		</div>

	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/scripts.js"></script>

</body>
</html>

