<h2 class="col-sm-offset-1">Property Create form</h2>

<form action="/prop/create" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Property name: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[name]" type="text">
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2">Image URL: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[imageurl]" type="text"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Estate: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[estate]" type="text"
            min="0" max="120">
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2">Bedrooms: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[bedrooms]" type="number"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Gross area: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[garea]" type="number"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Expected tenants: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[tenants]" type="number"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Rent: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[rent]" type="number"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Created at: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[createdAt]" type="text"
            min="0" max="120">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Updated at: </label>
        <div class="col-sm-8">
            <input class="form-control" name="Prop[updatedAt]" type="text"
            min="0" max="120">
        </div>
    </div>

    <button class="btn btn-default col-sm-offset-2" type="submit" value="ADD">Submit</button>
</form>
</div>
</div>
