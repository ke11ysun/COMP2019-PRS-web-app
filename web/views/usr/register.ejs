<form class="form-signin col-md-4 col-md-offset-4" action="/usr/register" 
        method="POST">
    <h2 class="form-signin-heading">Please register</h2>

    <label for="inputUsrname" class="sr-only">Email address</label>
    <input type="text" name="Usr[usrname]" class="form-control" 
        placeholder="Usrname" required autofocus name="usrname">

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="Usr[password]" class="form-control" 
        placeholder="Password" required name="password">
    
    <br>    
    <button class="btn btn-lg btn-primary btn-block" type="submit">
        Register</button>
 </form>